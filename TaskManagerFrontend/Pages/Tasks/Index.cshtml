@page
@model IndexModel
<h2>Lista de Tareas</h2>

<!-- Botón para crear una nueva tarea -->
<a asp-page="/Tasks/Create" class="btn btn-primary mb-3">Crear Nueva Tarea</a>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Status</td>
                <td>
                    <a asp-page="/Tasks/View" asp-route-id="@task.Id" class="btn btn-info btn-sm">Ver</a>
                    <a asp-page="/Tasks/Update" asp-route-id="@task.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="/Tasks/Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
