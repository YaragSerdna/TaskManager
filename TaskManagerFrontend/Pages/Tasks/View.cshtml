@page "{id:int}"
@model ViewModel
<h2>Detalles de la Tarea</h2>

<p><strong>Título:</strong> @Model.Task.Title</p>
<p><strong>Descripción:</strong> @Model.Task.Description</p>
<p><strong>Estado:</strong> @Model.Task.Status</p>
<p><strong>Creado:</strong> @Model.Task.CreatedAt</p>
<p><strong>Actualizado:</strong> @Model.Task.UpdatedAt</p>
<a href="/Tasks/Index" class="btn btn-secondary">Volver</a>
