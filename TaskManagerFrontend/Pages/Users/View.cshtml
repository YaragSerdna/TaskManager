@page "{id:int}"
@model ViewModel
<h2>Detalles del Usuario</h2>

<p><strong>Nombre:</strong> @Model.User.Name</p>
<p><strong>Email:</strong> @Model.User.Email</p>
<p><strong>Rol:</strong> @Model.User.Role</p>
<p><strong>Creado:</strong> @Model.User.CreatedAt</p>
<p><strong>Actualizado:</strong> @Model.User.UpdatedAt</p>
<a href="/Users/Index" class="btn btn-secondary">Volver</a>
